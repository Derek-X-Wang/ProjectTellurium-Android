<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/my_card_gridview_item">

    <ImageView
        android:id="@+id/my_card_gridview_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#f0605959"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="#ccc7c7c7"
        android:gravity="center"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_card_gridview_cardname"
            android:text="Loading"
            android:textSize="23sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="22dp"
        android:id="@+id/my_card_gridview_image"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:src="@drawable/user_default"
        app:civ_border_width="1dp"
        app:civ_border_color="#00ffffff"
        android:layout_gravity="center_horizontal|top" />
</FrameLayout>